<h1>Bidniz!</h1>
<h2>Welcome to Your Dashboard, <%= current_user.name %>!</h2>
<h3>Your email is: <%=current_user.email%>.</h3>

<% if current_user != @user %>
    <h4>You are viewing <%= @user.name %>'s profile </h4>
    <%= link_to "Go Back to Dashboard", user_path(current_user)%>
<% end %>

<% #if @user.businesses.count > 0 %>

    <% if logged_in? && current_user == @user %>
        <p><%= link_to "View All Your Businesses For Sale", businesses_path %><p>
        <p><%= link_to "Sell A Business", new_business_path %><p>
        <%= link_to "Logout", logout_path, method: :delete %>
    <% end %>
<% #end %>

