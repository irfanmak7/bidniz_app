<h1>Welcome to Bidniz!</h1>

<h2>Login</h2>

<%= form_for (@user) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Log In" %>
<% end %>

<p><%= link_to "Need to create an account?", new_user_path %></p>