<%= form_for (@business) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br>
    <%= f.submit "Create Business"%>

<% end %>